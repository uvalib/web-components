{
  "name": "uvalib-accordion",
  "version": "0.0.1",
  "description": "Accordion component for UVA Library Web content",
  "main": "index.js",
  "repository": "uvalib-components/uvalib-accordion",
  "scripts": {
    "copyindex": "cp src/index.html build",
    "copywc": "cp -r node_modules/@webcomponents/webcomponentsjs/bundles build && cp node_modules/@webcomponents/webcomponentsjs/webcomponents-loader.js build",
    "build": "rm -rf build && mkdir build && npm run copyindex && npm run copywc && rollup -c",
    "start": "serve build"
  },
  "author": "UVA Library UX",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "@webcomponents/webcomponentsjs": "^2.2.4",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "serve": "^10.1.1"
  },
  "dependencies": {
    "@patternfly/pfe-accordion": "^1.0.0-prerelease.24",
    "handorgel": "^0.4.9",
    "uvalib-theme": "https://github.com/uvalib-components/uvalib-theme#next"
  }
}
